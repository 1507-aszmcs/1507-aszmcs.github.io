---
const { cim } = Astro.props
const { pathname } = Astro.url;
---
<!-- Navigáció -->
<header class="inset-x-0 top-0 z-50">
    <nav aria-label="Global" class="flex items-center justify-between p-6 lg:p-8 lg:px-16">
        <div class="flex lg:flex-1">
            <a href="../" class="-m-1.5 p-1.5 flex">
                <img src="/images/logo.jpeg" alt="Csapatlogo" class="h-8 w-auto rounded-sm" />
                <span class="pl-4 text-2xl font-semibold justify-middle">1507.cserkesz.hu</span>
            </a>
        </div>
        <div class="flex lg:hidden">
            <button type="button" command="show-modal" commandfor="mobile-menu" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-200">
                <span class="sr-only">Menü megnyitása</span>
                <img src="../images/menu.png" alt="" class="h-8 w-auto">
            </button>
        </div>
        <div class="hidden lg:flex lg:gap-x-8">
            <a href="../" class="py-1.5 px-2.5 rounded-xl text-lg font-semibold text-black">Kezdőlap</a>
            <a href="../hirek/" class={`py-1.5 px-2.5 rounded-xl text-lg font-semibold text-black ${pathname === "/hirek/" ? "text-white bg-[#0f1955] " : ""}"`}>Hírek</a>
            <a href="../naptar/" class={`py-1.5 px-2.5 rounded-xl text-lg font-semibold text-black ${pathname === "/naptar/" ? "text-white bg-[#0f1955] " : ""}"`}>Naptár</a>
            <a href="../rolunk/" class={`py-1.5 px-2.5 rounded-xl text-lg font-semibold text-black ${pathname === "/rolunk/" ? "text-white bg-[#0f1955] " : ""}"`}>Rólunk</a>
            <a href="../kapcsolat/" class={`py-1.5 px-2.5 rounded-xl text-lg font-semibold text-black ${pathname === "/kapcsolat/" ? "text-white bg-[#0f1955] " : ""}"`}>Kapcsolat</a>
            <a href="../tamogatas/" class={`py-1.5 px-2.5 rounded-xl text-lg font-semibold text-black ${pathname === "/tamogatas/" ? "text-white bg-[#0f1955] " : ""}"`}>Támogatás</a>
        </div>
    </nav>
    <!-- Telefonos NAV -->
    <el-dialog>
        <dialog id="mobile-menu" class="backdrop:bg-transparent lg:hidden">
            <div tabindex="0" class="fixed inset-0 focus:outline-none">
                <el-dialog-panel class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-[#0f1955] p-6 sm:max-w-sm sm:ring-1 sm:ring-gray-100/10">
                    <div class="flex items-center justify-between">
                        <a href="#" class="-m-1.5 p-1.5 p-1 bg-white rounded-xl">
                            <span class="sr-only">ÁSZMCS</span>
                            <img src="../images/logo.jpeg" alt="" class="h-10 w-auto rounded-xl" />
                        </a>
                        <button type="button" command="close" commandfor="mobile-menu" class="-m-2.5 rounded-md p-2.5 text-gray-200">
                            <span class="sr-only">Menü bezárása</span>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6">
                            <path d="M6 18 18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </button>
                    </div>
                    <div class="mt-6 flow-root">
                        <div class="-my-6 divide-y divide-white/10">
                            <div class="space-y-2 py-6">
                                <a href="../index.html" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-white hover:bg-white/5">Kezdőlap</a>
                                <a href="../hirek/" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-white hover:bg-white/5">Hírek</a>
                                <a href="../naptar/" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-white hover:bg-white/5">Naptár</a>
                                <a href="../rolunk/" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-white hover:bg-white/5">Rólunk</a>
                                <a href="../kapcsolat/" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-white hover:bg-white/5">Kapcsolat</a>
                                <a href="../tamogatas/" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-white hover:bg-white/5">Támogatás</a>
                            </div>
                        </div>
                    </div>
                </el-dialog-panel>
            </div>
        </dialog>
    </el-dialog>
    <!-- NAV VÉGE -->
    <div class="w-full bg-[url(../images/csapat_foto_edited.JPG)] bg-top bg-cover">
        <div class="w-full h-max bg-black/50 py-20 lg:py-30 flex justify-center ">
            <h1 class="text-3xl md:text-5xl lg:text-6xl text-white font-semibold">{cim}</h1>
        </div>
    </div>
</header>
<!-- HERO VÉGE -->